<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kevin.rumahbatikinventory.dashboard">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/dashboard_button_addProduct"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Tambah Produk"/>
        <Button
            android:id="@+id/dashboard_button_sellProduct"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Potong Produk"/>
        <Button
            android:id="@+id/dashboard_button_checkProduct"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cek Produk"/>
        <Button
            android:id="@+id/dashboard_button_viewProduct"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Lihat Produk"/>
    </LinearLayout>

</LinearLayout>